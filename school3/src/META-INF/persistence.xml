<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="pu" transaction-type="RESOURCE_LOCAL">
    <provider>oracle.toplink.essentials.PersistenceProvider</provider>
    <class>bean.sales.SalesOrder</class>
    <class>bean.sales.SalesOrderItem</class>
    <class>bean.sales.SalesDelivery</class>
    <class>bean.sales.SalesDeliveryItem</class>
    <class>bean.sales.SalesReturn</class>
    <class>bean.sales.SalesReturnItem</class>
    <class>bean.sales.SalesInvoice</class>
    <class>bean.sales.SalesInvoiceItem</class>

    <class>bean.purchasing.PurchaseOrder</class>
    <class>bean.purchasing.PurchaseOrderItem</class>
    <class>bean.purchasing.PurchaseDelivery</class>
    <class>bean.purchasing.PurchaseDeliveryItem</class>
    <class>bean.purchasing.PurchaseReturn</class>
    <class>bean.purchasing.PurchaseReturnItem</class>
    <class>bean.purchasing.PurchaseInvoice</class>
    <class>bean.purchasing.PurchaseInvoiceItem</class>

    <class>bean.banking.IncomingPayment</class>
    <class>bean.banking.IncomingPaymentItem</class>
    <class>bean.banking.OutgoingPayment</class>
    <class>bean.banking.OutgoingPaymentItem</class>
    <class>bean.banking.BankDeposit</class>
    <class>bean.banking.CheckDepositItem</class>
    <class>bean.banking.CreditCardDepositItem</class>

    <class>bean.inventory.Item</class>
    <class>bean.inventory.Warehouse</class>
    <class>bean.inventory.WarehouseItem</class>
    <properties>
      <property name="toplink.jdbc.user" value="root"/>
      <property name="toplink.jdbc.password" value="password"/>
      <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/sapsample"/>
      <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="toplink.logging.level" value="FINER"/>
      <!--property name="toplink.ddl-generation" value="create-tables"/-->
      <property name="toplink.cache.type.default" value="NONE"/>
      <property name="toplink.cache.shared.default" value="false"/>
      <property name="toplink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
